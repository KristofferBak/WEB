extends layout

block content
    ul.breadcrumb
        li
            a(href="/") Home
        li.active= title

    div.bs-docs-section
        div.row
            div
                div.page-header
                    h1#typography= title
                div.bs-component
                    table.table.table-striped
                        thead
                            tr
                                th Name
                                th
                        tbody
                            for object in users
                                tr
                                    td= object.name
                                    td
                                        div.btn-group.btn-lg
                                            a.btn.btn-primary.btn-lg(href="/user/" + object._id + "/workouts")= 'Workouts '
                                                span.badge= object.workouts.length
                            form.form-inline(method='POST' action='/users/createUser')
                                tr
                                    td
                                        input#name.form-control(type='text', placeholder='Name' name='name' required='true' value=(undefined === user ? '' : user.name) )
                                    td
                                        div.btn-group.btn-lg
                                            button.btn.btn-primary.btn-lg(type='submit') Add user
                            form.form-inline(method='GET' action='/user/getAllActivity')
                                tr                                    
                                    td
                                        div.btn-group.btn-lg
                                            button.btn.btn-primary.btn-lg(type='submit') See Activities
                            form.form-inline(method='POST' action='/register')
                                tr                                    
                                    td
                                        div.btn-group.btn-lg
                                            button.btn.btn-primary.btn-lg(type='submit') Register New User
                        
                            

